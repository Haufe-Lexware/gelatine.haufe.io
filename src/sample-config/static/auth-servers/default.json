{
  "id": "default-auth",
  "desc": "Default Authorization Server",
  "authMethods": [
    {
      "enabled": true,
      "name": "local",
      "type": "local",
      "friendlyShort": "Username and Password",
      "friendlyLong": "Log in using a local username and password.",
      "config": {
        "trustUsers": true
      }
    },
    {
      "enabled": true,
      "type": "oauth2",
      "name": "atlantic",
      "friendlyShort": "Atlantic SSO",
      "friendlyLong": "FS oauth2",
      "config": {
        "clientId": "sucasa-integration",
        "clientSecret": "Sucasa-integration123!",
        "endpoints": {
          "authorizeEndpoint": "https://integration.login.haufe-lexware.com/auth/oauth2/authorize",
          "authorizeScope": "openid profile email",
          "tokenEndpoint": "https://integration.login.haufe-lexware.com/auth/oauth2/access_token",
          "profileEndpoint": "https://integration.login.haufe-lexware.com/auth/oauth2/userinfo",
          "redirectURIValidationEndpoint": "http://192.168.0.249:9001/logout"
        },
        "params": {},
        "customIdField": "sub",
        "firstNameField": "given_name",
        "lastNameField": "family_name",
        "emailField": "email",
        "retrieveProfile": false,
        "nameField": "name"
      }
    }
  ],
  "config": {
    "api": {
      "name": "default-auth",
      "upstream_url": "$PORTAL_AUTHSERVER_URL",
      "routes": [
        {
          "paths": [
            "/auth"
          ],
          "strip_path": false,
          "preserve_host": false
        }
      ]
    },
    "plugins": [
      {
        "name": "correlation-id",
        "config": {
          "header_name": "Correlation-Id",
          "generator": "uuid",
          "echo_downstream": false
        }
      }
    ]
  }
}